<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <!-- Fullscreen background image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/on3" />

    <!-- Centered creative text block -->
    <LinearLayout
        android:id="@+id/textBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Big Title -->
        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ•ï¸ Camping Mad"
            android:textSize="38sp"
            android:textStyle="bold"
            android:fontFamily="@font/cabin_medium"
            android:textColor="@android:color/white"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="6" />

        <!-- Divider line -->
        <View
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_marginTop="12dp"
            android:background="@color/accent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/homeSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Plan trips â€¢ Book camps â€¢ Explore nature"
            android:textSize="18sp"
            android:fontFamily="@font/cabin_medium"
            android:textColor="@android:color/white"
            android:shadowColor="#99000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4" />

    </LinearLayout>

    <!-- Creative Rounded Button -->
    <Button
        android:id="@+id/getstartbtn"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:text="ðŸŒ² Start Exploring"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/accent"
        android:elevation="10dp"
        android:fontFamily="@font/cabin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp"
        style="?attr/materialButtonOutlinedStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>
