<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Primary"
    tools:context=".Tips">

    <!-- Page header -->
    <TextView
        android:id="@+id/tipsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ•ï¸ Camping Tips"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/cabin_medium"
        android:textColor="@color/Secondary"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subheader -->
    <TextView
        android:id="@+id/tipsSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple tricks to keep your campsite safe, clean, and cozy"
        android:textSize="14sp"
        android:textColor="@color/font_ash"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tipsHeader" />

    <!-- Scrollable tips list -->
    <ScrollView
        android:id="@+id/tipsScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/Primary"
        app:layout_constraintTop_toBottomOf="@+id/tipsSubHeader"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <!-- Tip card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:elevation="6dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:background="@color/Secondary">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ•ï¸ Pitch Smart"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/Primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Choose elevated ground, check wind direction, and keep a safe distance from water sources."
                        android:textColor="@color/Primary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tip card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:elevation="6dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:background="@color/Secondary">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ Fire Safety"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/Primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Build fires in designated rings, keep water or sand nearby, and fully extinguish before sleeping."
                        android:textColor="@color/Primary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tip card 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:elevation="6dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:background="@color/Secondary">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ’ Pack Light, Pack Right"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/Primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Essentials first: first-aid, water filter, headlamp, tarp, and layered clothing."
                        android:textColor="@color/Primary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tip card 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:elevation="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:background="@color/Secondary">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ§­ Navigation"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/Primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Download offline maps, carry a compass, and mark your campsite before exploring."
                        android:textColor="@color/Primary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar (unchanged) -->
    <FrameLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@color/Secondary"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Home button -->
            <ImageButton
                android:id="@+id/home_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:contentDescription="@string/home_btn"
                app:srcCompat="@drawable/house"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/challenge_btn" />

            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_btn"
                android:textColor="@color/Primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/home_btn"
                app:layout_constraintStart_toStartOf="@id/home_btn"
                app:layout_constraintEnd_toEndOf="@id/home_btn" />

            <!-- Challenge button -->
            <ImageButton
                android:id="@+id/challenge_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:contentDescription="@string/challenge_btn"
                app:srcCompat="@drawable/target"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_challenge"
                app:layout_constraintStart_toEndOf="@id/home_btn"
                app:layout_constraintEnd_toStartOf="@id/bulb_btn" />

            <TextView
                android:id="@+id/text_challenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/challenge_btn"
                android:textColor="@color/Primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/challenge_btn"
                app:layout_constraintStart_toStartOf="@id/challenge_btn"
                app:layout_constraintEnd_toEndOf="@id/challenge_btn" />

            <!-- Tips button -->
            <ImageButton
                android:id="@+id/bulb_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:contentDescription="@string/tips_btn"
                app:srcCompat="@drawable/lightbulb"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_tips"
                app:layout_constraintStart_toEndOf="@id/challenge_btn"
                app:layout_constraintEnd_toStartOf="@id/product_btn" />

            <TextView
                android:id="@+id/text_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tips_btn"
                android:textColor="@color/Primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/bulb_btn"
                app:layout_constraintStart_toStartOf="@id/bulb_btn"
                app:layout_constraintEnd_toEndOf="@id/bulb_btn" />

            <!-- Products button -->
            <ImageButton
                android:id="@+id/product_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:contentDescription="@string/products_btn"
                app:srcCompat="@drawable/product"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_products"
                app:layout_constraintStart_toEndOf="@id/bulb_btn"
                app:layout_constraintEnd_toStartOf="@id/profile_btn" />

            <TextView
                android:id="@+id/text_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/products_btn"
                android:textColor="@color/Primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/product_btn"
                app:layout_constraintStart_toStartOf="@id/product_btn"
                app:layout_constraintEnd_toEndOf="@id/product_btn" />

            <!-- Profile button -->
            <ImageButton
                android:id="@+id/profile_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:contentDescription="Profile"
                app:srcCompat="@drawable/profile______removebg_preview"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_profile"
                app:layout_constraintStart_toEndOf="@id/product_btn"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/text_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/Primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/profile_btn"
                app:layout_constraintStart_toStartOf="@id/profile_btn"
                app:layout_constraintEnd_toEndOf="@id/profile_btn" />

            <!-- Make buttons evenly spaced -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="1.0" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
