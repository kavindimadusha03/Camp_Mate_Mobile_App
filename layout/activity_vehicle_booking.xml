<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Primary"
    tools:context=".VehicleBooking">

    <!-- Page Title -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸš Camping Vehicle Booking"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/cabin_medium"
        android:textColor="@color/Secondary"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Vehicle 1 Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/pageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/vehicle1"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/campvan1" />

            <TextView
                android:id="@+id/vehicle1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="170dp"
                android:text="Camper Van V1"
                android:textColor="@color/Secondary"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/vehicle1Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:layout_marginTop="50dp"
                android:text="Perfect for family camping\nSeats: 4 | Beds: 2"
                android:textColor="@color/font_ash"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bookV1"
                android:layout_width="120dp"
                android:layout_height="43dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="16dp"
                android:text="Book Now"
                android:backgroundTint="@color/Secondary"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Vehicle 2 Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:layout_marginTop="250dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/pageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/vehicle2"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/campvan2" />

            <TextView
                android:id="@+id/vehicle2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="170dp"
                android:text="Camping SUV V2"
                android:textColor="@color/Secondary"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/vehicle2Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:layout_marginTop="50dp"
                android:text="All-terrain adventure SUV\nSeats: 5 | Compact sleeping space"
                android:textColor="@color/font_ash"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bookV2"
                android:layout_width="120dp"
                android:layout_height="43dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="16dp"
                android:text="Book Now"
                android:backgroundTint="@color/Secondary"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Vehicle 3 Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:layout_marginTop="420dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/pageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/vehicle3"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/campvan3" />

            <TextView
                android:id="@+id/vehicle3Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="170dp"
                android:text="Luxury Camper V3"
                android:textColor="@color/Secondary"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/vehicle3Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:layout_marginTop="50dp"
                android:text="Luxury on wheels\nSeats: 6 | Beds: 3 | Kitchen"
                android:textColor="@color/font_ash"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bookV3"
                android:layout_width="120dp"
                android:layout_height="43dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="16dp"
                android:text="Book Now"
                android:backgroundTint="@color/Secondary"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@color/Secondary"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Home button -->
            <ImageButton
                android:id="@+id/home_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:contentDescription="@string/home_btn"
                app:srcCompat="@drawable/house"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/challenge_btn" />

            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_btn"
                android:textColor="@color/Primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/home_btn"
                app:layout_constraintStart_toStartOf="@id/home_btn"
                app:layout_constraintEnd_toEndOf="@id/home_btn" />

            <!-- Challenge button -->
            <ImageButton
                android:id="@+id/challenge_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:contentDescription="@string/challenge_btn"
                app:srcCompat="@drawable/target"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_challenge"
                app:layout_constraintStart_toEndOf="@id/home_btn"
                app:layout_constraintEnd_toStartOf="@id/bulb_btn" />

            <TextView
                android:id="@+id/text_challenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/challenge_btn"
                android:textColor="@color/Primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/challenge_btn"
                app:layout_constraintStart_toStartOf="@id/challenge_btn"
                app:layout_constraintEnd_toEndOf="@id/challenge_btn" />

            <!-- Tips button -->
            <ImageButton
                android:id="@+id/bulb_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:contentDescription="@string/tips_btn"
                app:srcCompat="@drawable/lightbulb"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_tips"
                app:layout_constraintStart_toEndOf="@id/challenge_btn"
                app:layout_constraintEnd_toStartOf="@id/product_btn" />

            <TextView
                android:id="@+id/text_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tips_btn"
                android:textColor="@color/Primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/bulb_btn"
                app:layout_constraintStart_toStartOf="@id/bulb_btn"
                app:layout_constraintEnd_toEndOf="@id/bulb_btn" />

            <!-- Products button -->
            <ImageButton
                android:id="@+id/product_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:contentDescription="@string/products_btn"
                app:srcCompat="@drawable/product"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_products"
                app:layout_constraintStart_toEndOf="@id/bulb_btn"
                app:layout_constraintEnd_toStartOf="@id/profile_btn" />

            <TextView
                android:id="@+id/text_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/products_btn"
                android:textColor="@color/Primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/product_btn"
                app:layout_constraintStart_toStartOf="@id/product_btn"
                app:layout_constraintEnd_toEndOf="@id/product_btn" />

            <!-- Profile button -->
            <ImageButton
                android:id="@+id/profile_btn"
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:background="@null"
                android:contentDescription="Profile"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toTopOf="@+id/text_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/product_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/profile______removebg_preview" />

            <TextView
                android:id="@+id/text_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/Primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/profile_btn"
                app:layout_constraintStart_toStartOf="@id/profile_btn"
                app:layout_constraintEnd_toEndOf="@id/profile_btn" />

            <!-- Home button -->
            <ImageButton
                android:id="@+id/home_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:contentDescription="@string/home_btn"
                app:srcCompat="@drawable/house"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintEnd_toStartOf="@id/challenge_btn" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="253dp"
        android:layout_height="36dp"
        android:text="Go where the signal is weak and the views are strong. Book your camper today"
        android:textColor="#2B504B"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="85dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
